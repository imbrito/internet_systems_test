source 'https://rubygems.org'
# ruby '2.1.1'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.2.6'

# Use postgresql as the database for Active Record
gem 'pg', '~> 0.15'

# Use SCSS for stylesheets
gem 'sass-rails', '~> 5.0'

# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'

# Use CoffeeScript for .coffee assets and views
gem 'coffee-rails', '~> 4.1.0'

# See https://github.com/rails/execjs#readme for more supported runtimes
gem 'therubyracer', platforms: :ruby

# Use jquery as the JavaScript library
gem 'jquery-rails'

# Turbolinks makes following links in your web application faster. Read more: https://github.com/rails/turbolinks
gem 'turbolinks'

# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 2.0'

# bundle exec rake doc:rails generates the API under doc/api.
gem 'sdoc', '~> 0.4.0', group: :doc

# Use ActiveModel has_secure_password
# gem 'bcrypt', '~> 3.1.7'

# Use Unicorn as the app server
gem 'unicorn'

# Use Capistrano for deployment
# gem 'capistrano-rails', group: :development

# twitter-bootstrap-rails project integrates Bootstrap CSS toolkit for Rails 3.1 Asset Pipeline
gem 'twitter-bootstrap-rails', '~> 3.2.2'

# Invoke the Less CSS compiler from Ruby
gem 'less', '~> 2.6.0'

# The dynamic stylesheet language for the Rails asset pipeline. Allows other gems to extend Less load path
gem 'less-rails', '~> 2.7.1'

# Forms made easy!
gem 'simple_form', '~> 3.2.1'

# Provides the generator settings required for Rails 3 and 4 to use Slim
gem 'slim-rails', '~> 3.0.1'

# Inherited Resources speeds up development by making your controllers inherit all restful actions
# so you just have to focus on what is important
gem 'inherited_resources', '~> 1.6.0'

# The readline library provides a pure Ruby implementation of the GNU readline C library, 
# as well as the Readline extension that ships as part of the standard library
gem 'rb-readline', '~> 0.5.3'

# Exception notification for Rails apps
gem 'exception_notification', '~> 4.1.4'

# Unobtrusive nested forms handling, using jQuery. Use this and discover cocoon-heaven
gem 'cocoon', '~> 1.2.9'

# Client library and command-line tool to deploy and manage apps on Heroku
gem 'heroku', '~> 3.43.0'

# Run Rails the 12factor way
gem 'rails_12factor', group: :production

# Use Capistrano for deployment
# gem 'capistrano-rails', group: :development

# Enumerations for Ruby with some magic powers!
gem 'enumerate_it', '~> 1.2.9'

# Magic media queries for your Compass project
gem 'responder', '~> 0.2.4'

group :development, :test do
  # Call 'byebug' anywhere in the code to stop execution and get a debugger console
  gem 'byebug'

  # Access an IRB console on exception pages or by using <%= console %> in views
  gem 'web-console', '~> 2.0'

  # Spring speeds up development by keeping your application running in the background. Read more: https://github.com/rails/spring
  gem 'spring'

  # Capybara is an integration testing tool for rack based web applications. 
  # It simulates how a user would interact with a website
  gem 'capybara', '~> 2.7.0'

  # Poltergeist is a driver for Capybara that allows you to run your tests on a headless WebKit browser, provided by PhantomJS
  # gem 'poltergeist', '~> 1.5.0'
  
  # Strategies for cleaning databases. Can be used to ensure a clean state for testing.
  gem 'database_cleaner', '~> 1.5.3'

  # Making tests easy on the fingers and eyes
  gem 'shoulda-matchers', '~> 3.1.1'

  # RSpec for Rails
  gem 'rspec-rails', '~> 3.4.2'

  # factory_girl_rails provides integration between factory_girl and rails 3 (currently just automatic factory definition loading)
  gem 'factory_girl_rails', '~> 4.7.0'
  
  # Launchy is helper class for launching cross-platform applications in a fire and forget manner. 
  # There are application concepts (browser, email client, etc) that are common across all platforms, and they may be launched differently on each platform. 
  # Launchy is here to make a common approach to launching external application from within ruby programs.
  gem 'launchy', '~> 2.4.3'

  # Minimalist validation matcher
  gem 'valid_attribute', '~> 2.0.0'

  # Use Pry as your rails console
  gem 'pry-rails', '~> 0.3.4'

  # Automatically generate an entity-relationship diagram (ERD) for your Rails models.
  gem 'rails-erd', '~> 1.4.7'
end

